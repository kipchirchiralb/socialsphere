<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up Page</title>
    <link rel="stylesheet" href="main.css" />
  </head>
  <body>
    <div id="backdrop">
      <%- include('_header') %>
      <main>
        <h1>Sign Up Page</h1>
        <form action="/create-account" class="glass" method="post">
          <div class="input-group">
            <label for="fullname">Full Name: </label>
            <input type="text" name="fullname" id="fullname" />
          </div>
          <div class="input-group">
            <label for="username">Choose a username:</label>
            <input type="text" name="username" id="username" maxlength="10" />
          </div>
          <div class="input-group">
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" />
          </div>
          <div class="input-group">
            <label for="address">Address:</label>
            <input type="text" name="address" id="address" />
          </div>
          <div class="input-group">
            <label for="password">Password:</label>
            <input type="password" name="password" id="password" />
          </div>
          <div class="input-group">
            <label for="confirmpassword">Confirm Password:</label>
            <input
              type="password"
              name="confirmpassword"
              id="confirmpassword"
            />
          </div>
          <div class="input-group">
            <input type="submit" class="btn" value="Sign Up" />
          </div>
          <p>
            Not New?
            <a href="/login" style="text-decoration: underline">Log In</a>
          </p>
        </form>
      </main>
      <%- include('_footer') %>
    </div>
    <script>
      document
        .getElementById("confirmpassword")
        .addEventListener("input", function () {
          const passwordInput = document.getElementById("password");
          const confirmPasswordInput =
            document.getElementById("confirmpassword");

          // Check if the passwords match
          if (passwordInput.value !== confirmPasswordInput.value) {
            confirmPasswordInput.classList.add("error-outline");
          } else {
            confirmPasswordInput.classList.remove("error-outline");
          }
        });
    </script>
  </body>
</html>
